{%
  set classes = [
    system_page ? 'system-page',
  ]
%}

{{ page.header }}

<main role="main" {{attributes.addClass(classes)}}>
  {% if system_page %}
    <h1>{{page['#title']}}</h1>
  {% endif %}
  {{ page.content }}
</main>

{% if show_totop %}
  <button data-to-top class="to-top">
    <span class="icon-arrow-up"></span>
  </button>
{% endif %}

{% if show_footer %}
<section class="pre-footer">
    {{ page.prefooter }}
</section>

{% if page.footer %}
  <footer class="site-footer" role="contentinfo">
    {{ page.footer }}
  </footer>
{% endif %}
{% endif %}

{% include '@circle/partials/modal.html.twig' %}
